<!DOCTYPE html>
<html>
<head>
  <title>RailsBlog</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>

  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <header>
    <section id='logo'>
      <%= image_tag('logo.png', alt: '') %>
      <%= link_to "Barking Blog", "/", id: 'logo-title' %>
    </section>
    <nav>
      <% if logged_in? %>
        <%= link_to current_user.username, "/users/#{current_user.id}", class: 'link' %>
        <%= link_to "logout", "/session", class: 'link', method: :delete %>
      <% else %>
        <%= link_to "login", "/session/new", class: 'link' %>
        <%= link_to "sign up", "/users/new", class: 'link' %>
      <% end %>
    </nav>
  </header>

  <main>
    <%= yield %>
  </main>
</body>
</html>
