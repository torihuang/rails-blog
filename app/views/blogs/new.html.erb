<%= form_for(@blog) do |f| %>
  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </p>

  <p>
    <%= f.label :description %><br>
    <%= f.text_field :description %>
  </p>

  <p>
    <%= f.label "Tags separated by commas" %><br>
    <%= f.text_field :multiple_tags %>
  </p>

  <p>
    <%= f.submit %>
  </p>
<% end %>
